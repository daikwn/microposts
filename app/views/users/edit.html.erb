<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

    <div class="form-group">
		<label for="Name" class="col-sm-2 control-label">NAME</label>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control", id: "Name", placeholder: "NAME" %>
		</div>
    </div>
  
    <div class="form-group">
		<label for="Email" class="col-sm-2 control-label">EMAIL</label>
		<div class="col-sm-10">
			<%= f.text_field :email, class: "form-control", id: "Email", placeholder: "EMAIL" %>
		</div>
	</div>

	<div class="form-group">
		<label for="Location" class="col-sm-2 control-label">LOCATION</label>
		<div class="col-sm-10">
			<%= f.text_field :location, class: "form-control", id: "Location", placeholder: "LOCATION" %>
		</div>
	</div>
	
	<div class="form-group">
		<label for="Prof" class="col-sm-2 control-label">PROFILE</label>
		<div class="col-sm-10">
			<%= f.text_area :prof, class: "form-control", id: "Prof", placeholder: "PROF" %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "update profile",class: "btn btn-sm btn-primary" %>
		</div>
	</div>
<% end %>
